<!DOCTYPE html>
<html>
  <head>
    <title>ToDoList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <% if (user_signed_in?)%>
      <%= link_to 'NavBrand', root_path, class: 'nav-brand' %>
      <%= link_to 'Task Board', tasks_path, class: 'nav-item nav-link active' %> 
      <%= link_to 'Create a Task', new_task_path, class: 'nav-link' %>
      <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'nav-link'%> 
      <div class='nav-item text-white nav-link'>
        <%= form_with(url: 'search', local: true) do %>
          <%= label_tag(:q, 'Search:') %>
          <%= text_field_tag(:q) %>
          <%= submit_tag('Search') %>
        <% end %>
      </div>
    <% else %>
     <%=link_to 'Log In', new_user_session_path, class: 'nav-item nav-link active' %>
     <%=link_to 'Create Account', new_user_registration_path, class: 'nav-item nav-link active' %>
    <% end %>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> 
    <%= yield %>
  </body>
</html>
