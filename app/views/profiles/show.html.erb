<div class='container border'>
  
  <div class='row'>
    <% if @profile == current_user.profile %>
      <h1 class='col', align='center'> Welcome, <%= @profile.nickname %>!</h1> 
    <% else %>
      <h1 class='col', align='center'> Welcome to <%= @profile.nickname %>'s Profile!</h1> 
    <% end %>
  </div>

  <br>


  <br>

  <div class='row'>
    <p class='col-2'><strong>Profile Picture</strong>:</p> 
    <% if @profile.avatar.attached? %>
      <%= image_tag(@profile.avatar, class:'img-fluid col-2 border') %> 
    <% else %>
      <p class='col-4'>Empty</p>
    <% end %>
    <p class='col-4 text-center text-wrap text-break'  align='center' style='white-space: initial;' >
      <strong>Bio</strong>:
      <br>
      <%= @profile.bio %>
    </p>
  </div>

  <br> 
    <div class='row'>
      <p class='col-4'></p>
      <% if current_user == @profile.user %> 
        <p class='btn btn-secondary col-2'> <%= link_to 'Edit Info', edit_profile_path(@profile), class: 'text-white'%> </p>
      <% end %>
    </div>


  </div>
</div>

